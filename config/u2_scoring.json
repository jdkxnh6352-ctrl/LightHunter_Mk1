{
  "dataset": {
    "path": "data/datasets/ultrashort_main.parquet",
    "label_col": "label_u2",
    "feature_cols": [
      "open",
      "high",
      "low",
      "close",
      "volume",
      "amount",
      "ret_1",
      "ret_5",
      "ret_20",
      "vol_20",
      "amt_mean_20"
    ],
    "train_days": 120
  },
  "scoring": {
