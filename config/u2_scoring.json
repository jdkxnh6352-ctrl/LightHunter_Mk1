    "max_price": 80.0,
    "min_amount": 20000000.0,
    "position_weight": 0.30,
    "stop_loss": 0.05,
    "take_profit": 0.08
  },
  "output": {
    "dir": "reports/u2_daily",
    "file_prefix": "u2_candidates_",
    "encoding": "utf-8-sig"
  }
