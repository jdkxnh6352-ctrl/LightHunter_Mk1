{
  "job_id": "u2_live_main",

  "dataset": {
    "path": "data/datasets/ultrashort_main.parquet",
    "label_col": "label_u2",
    "ret_col": "ret_1",
    "feature_cols": [
      "open",
      "high",
      "low",
      "close",
      "volume",
      "amount",
      "vol_20",
      "amt_mean_20"
    ]
  },

  "training": {
    "train_days": 120,
    "min_train_days": 40
  },

  "filter": {
    "min_price": 3,
    "max_price": 80,
    "min_amount": 20000000
  },

  "scoring": {
    "top_k": 4,
    "min_prob": 0.65,
    "label_threshold": 0.0
  },

  "position": {
    "max_positions": 3,
    "position_weight": 0.9,
    "stop_loss": 0.03,
    "take_profit": 0.08,
    "cost_rate": 0.001
  },

  "output": {
    "dir": "reports/u2_live_batch"
  },

  "research_ranges": [
    {
      "name": "train_2020_2022",
      "start_date": "2020-01-01",
      "end_date": "2022-12-31"
    },
    {
      "name": "valid_2023",
      "start_date": "2023-01-01",
      "end_date": "2023-12-31"
    },
    {
      "name": "oos_2024_2025",
      "start_date": "2024-01-01",
      "end_date": "2025-10-31"
    }
  ]
}
